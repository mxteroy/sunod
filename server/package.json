{
  "name": "server",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/server/src/index.js",
  "scripts": {
    "relay": "yarn --cwd=\"../\" relay",
    "codegen": "rm -rf ./src/schema/ && yarn graphql-codegen && yarn prettier \"src/**/**/*.ts\" --write && cp ./src/schema/schema.generated.graphqls ./src/schema/schema.generated.graphql &&  ts-node scripts/patch-enum-resolvers.ts",
    "copy-jade": "cpx 'src/**/*.jade' dist/",
    "compile": "yarn tsc && yarn tsc-alias",
    "compile_with_jade": "yarn compile  && yarn copy-jade",
    "build": "yarn tsc",
    "start": "rm -rf /dist && yarn codegen && yarn compile_with_jade  && node dist/server/src/index.js",
    "dev": "yarn codegen && yarn build && yarn tsx watch src",
    "build_old": "yarn tsc",
    "start_old": "yarn compile && node ./dist/index.js",
    "start_apollo_default": "yarn compile && node ./dist/src/entrypoint.js",
    "start_express_default": "node ./bin/www"
  },
  "dependencies": {
    "@apollo/server": "^4.12.2",
    "@eddeee888/gcg-typescript-resolver-files": "^0.12.1",
    "@google/generative-ai": "^0.24.1",
    "@graphql-codegen/cli": "^5.0.7",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-operations": "^4.6.1",
    "@prisma/client": "^6.11.1",
    "@types/node": "^24.0.10",
    "argon2": "^0.43.1",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cpx": "^1.5.0",
    "google-auth-library": "^10.2.1",
    "graphql": "^16.11.0",
    "graphql-scalars": "^1.24.2",
    "graphql-subscriptions": "^3.0.0",
    "invariant": "^2.2.4",
    "jade": "^1.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "openai": "^5.12.1",
    "prettier": "^3.6.2",
    "prisma": "^6.17.1",
    "serve-favicon": "^2.5.1",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.8.3",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.7",
    "@types/bcryptjs": "^3.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/debug": "^4.1.12",
    "@types/invariant": "^2.2.37",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
